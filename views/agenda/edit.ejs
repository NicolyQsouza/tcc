<h1>Editar Agenda</h1>
<form action="/agenda/<%= agenda.cod %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="clientes">Cliente:</label>
        <select name="clientes" id="clientes" class="form-control" required>
            <option value="">Selecione o Cliente</option>
            <% clientes.forEach(cliente => { %>
                <option value="<%= cliente.cod %>" <%= cliente.cod == agenda.clientes.cod ? 'selected' : '' %>><%= cliente.nome %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="procedimentos">Procedimento:</label>
        <select name="procedimentos" id="procedimentos" class="form-control" required>
            <option value="">Selecione o Procedimento</option>
            <% procedimentos.forEach(procedimento => { %>
                <option value="<%= procedimento.cod %>" <%= procedimento.cod == agenda.procedimentos.cod ? 'selected' : '' %>><%= procedimento.nome %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="profissional">Profissional:</label>
        <input type="text" name="profissional" id="profissional" class="form-control" value="<%= agenda.profissional %>" required>
    </div>

    <div class="form-group">
        <label for="forma_pag">Forma de Pagamento:</label>
        <input type="text" name="forma_pag" id="forma_pag" class="form-control" value="<%= agenda.forma_pag %>" required>
    </div>

    <div class="form-group">
        <label for="data">Data:</label>
        <input type="date" name="data" id="data" class="form-control" value="<%= agenda.data %>" required>
    </div>

    <div class="form-group">
        <label for="hora">Hora:</label>
        <input type="time" name="hora" id="hora" class="form-control" value="<%= agenda.hora %>" required>
    </div>

    <button type="submit" class="btn btn-warning">Atualizar</button>
</form>
