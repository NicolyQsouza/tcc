<h1 class="mb-4">Editar Produto</h1>
<form action="/produtos/<%= produtos.cod %>?_method=PUT" method="POST" class="p-4 border rounded shadow-sm">
    <div class="form-group mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= produtos.nome %>" required>
    </div>
    <div class="form-group mb-3">
        <label for="valor" class="form-label">Valor</label>
        <input type="number" step="0.01" class="form-control" id="valor" name="valor" value="<%= produtos.valor %>" required>
    </div>
    <div class="form-group mb-3">
        <label for="marca" class="form-label">Marca</label>
        <input type="text" class="form-control" id="marca" name="marca" value="<%= produtos.marca %>">
    </div>
    <div class="form-group mb-3">
        <label for="descricao" class="form-label">Descrição</label>
        <textarea class="form-control" id="descricao" name="descricao" required><%= produtos.descricao %></textarea>
    </div>
    <div class="form-group mb-4">
        <label for="foto" class="form-label">Foto do Produto</label>
        <input type="file" class="form-control" id="foto" name="foto">
    </div>
    <button type="submit" class="btn btn-warning w-100">Salvar</button>
</form>
