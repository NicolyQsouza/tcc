<h1 class="text-center my-4">Lista de Feedbacks</h1>

<table class="table table-striped table-bordered container shadow">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Foto</th>
            <th>Comentário</th>
            <th>Avaliação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% feedbacks.forEach(feedback => { %>
            <tr>
                <td><%= feedback.cod %></td>
                <td><%= feedback.cliente_nome %></td>
                <td>
                    <% if (feedback.foto) { %>
                        <img src="<%= feedback.foto %>" alt="Foto" class="img-thumbnail" style="max-width: 100px;">
                    <% } else { %>
                        <em>Sem foto</em>
                    <% } %>
                </td>
                <td><%= feedback.comentario %></td>
                <td><%= feedback.avaliacao %></td>
                <td>
                    <a href="/feedbacks/<%= feedback.cod %>" class="btn btn-primary btn-sm">Ver</a>
                    <a href="/feedbacks/<%= feedback.cod %>/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/feedbacks/<%= feedback.cod %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
